    <!-- Example with four child views - vertical chain spread -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hilding"
        android:id="@+id/hilding"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@id/nea"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nea"
        android:id="@+id/nea"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/hilding"
        app:layout_constraintBottom_toTopOf="@id/stig"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stig"
        android:id="@+id/stig"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@id/ellen"
        app:layout_constraintTop_toBottomOf="@id/nea"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
